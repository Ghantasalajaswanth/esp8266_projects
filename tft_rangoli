#include <SPI.h>
#include <Adafruit_GFX.h>
#include <Adafruit_ILI9341.h>
#include <math.h>

#define TFT_CS   15
#define TFT_DC   2
#define TFT_RST  4

Adafruit_ILI9341 tft(TFT_CS, TFT_DC, TFT_RST);

#define CX 160
#define CY 120

void setup() {
  tft.begin();
  tft.setRotation(1);
  tft.fillScreen(ILI9341_BLACK);

  // Call ONE design at a time
  design10();
}

void loop() {
}
void design1() {
  for (int r = 10; r <= 100; r += 10) {
    tft.drawCircle(CX, CY, r, ILI9341_GREEN);
  }

  
}
void design2() {
  for (int i = 0; i < 360; i += 45) {
    float a = i * DEG_TO_RAD;
    tft.drawCircle(CX + cos(a)*40, CY + sin(a)*40, 40, ILI9341_CYAN);
  }
  
}
void design3() {
  tft.drawCircle(CX, CY, 40, ILI9341_YELLOW);
  for (int i = 0; i < 360; i += 15) {
    float a = i * DEG_TO_RAD;
    tft.drawLine(CX, CY,
      CX + cos(a)*100,
      CY + sin(a)*100,
      ILI9341_RED);
  }
}
void design4() {
  for (int s = 20; s <= 180; s += 20) {
    tft.drawRect(CX - s/2, CY - s/2, s, s, ILI9341_MAGENTA);
  }
}
void design5() {
  for (int i = 0; i < 360; i += 30) {
    float a = i * DEG_TO_RAD;
    tft.drawLine(
      CX + cos(a)*20, CY + sin(a)*20,
      CX + cos(a)*100, CY + sin(a)*100,
      ILI9341_WHITE);
  }
}

void design6() {
  for (int x = 60; x <= 260; x += 40) {
    for (int y = 40; y <= 200; y += 40) {
      tft.fillCircle(x, y, 4, ILI9341_GREEN);
    }
  }
}
void design7() {
  for (int a = 0; a < 360 * 4; a += 5) {
    float r = 0.2 * a;
    float ang = a * DEG_TO_RAD;
    tft.drawPixel(
      CX + cos(ang) * r,
      CY + sin(ang) * r,
      ILI9341_CYAN);
  }
}
void design8() {
  for (int i = 0; i < 360; i += 60) {
    float a = i * DEG_TO_RAD;
    tft.fillCircle(
      CX + cos(a)*60,
      CY + sin(a)*60,
      15,
      ILI9341_RED);
  }
  tft.fillCircle(CX, CY, 10, ILI9341_YELLOW);
}
void design9() {
  for (int i = 0; i < 360; i += 10) {
    float a = i * DEG_TO_RAD;
    tft.drawCircle(
      CX + cos(a)*30,
      CY + sin(a)*30,
      30,
      ILI9341_WHITE);
  }
}
void design10() {
  for (int i = 0; i < 360; i += 5) {
    float a = i * DEG_TO_RAD;
    float r = 80 + 20 * sin(6 * a);
    tft.drawPixel(
      CX + cos(a) * r,
      CY + sin(a) * r,
      ILI9341_GREEN);
  }
}
